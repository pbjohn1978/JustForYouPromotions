<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="header">
        <div>
            <img class="HeaderLogo" src="~/Images/justForYouPromotionsPNG.png" />
        </div>
        <div>
            <ul class="daTabs">
                <li id="contTab">@Html.ActionLink("Contact", "Index", "Contact")</li>
                <li id="prodTab">@Html.ActionLink("Products", "Index", "Products")</li>
                <li id="homeTab">@Html.ActionLink("Home", "Index", "Home")</li>
            </ul>
        </div>
    </div>
    <div class="SideBarWidth SideBarBackground SideBarTextColor">
        this is a sidebar... :)
    </div>
    <div>
        @RenderBody()
        <br />
        <footer>
            <p class="text-center">Just 4 You Promotions: @Html.ActionLink("Home", "Index", "Home") | @Html.ActionLink("Products", "Index", "Products") | @Html.ActionLink("Contact", "Index", "Contact")  </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
